@page
@model Materials.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].MatCode)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Material[0].MatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].MatUM)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
            @foreach(var item in Model.Material.ToList())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatCode)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MatName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatUM)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.MaterialId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.MaterialId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.MaterialId">Delete</a>
                    </td>
                    
                </tr>
            }
    </tbody>
</table>
